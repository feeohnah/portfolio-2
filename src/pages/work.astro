---

import BaseLayout from '../layouts/BaseLayout.astro';
import Work from '../components/Work.astro';
import '../styles/global.css';

const allWork= Object.values(import.meta.glob('./work/*.md', { eager: true }));

const pageTitle = "Work page";

---

<BaseLayout pageTitle={pageTitle}>
<section class="container">
	<ul class="work-list">
		{allWork.map((work: any) => <Work url={work.url} title={work.frontmatter.title} image={work.frontmatter.image} />)}
	</ul>
</section>
</BaseLayout>

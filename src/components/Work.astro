---

const { background, link, linkText, client, year, image, description } = Astro.props;

---

<li id="work" class="work-post"><div class="thumbnail"><img src={image.url} width="auto" alt={image.alt} /></div><span class="title"><h4>{client}</h4><h4>{year}</h4></span><p>{description}</p><a href={link}>{linkText}</a></li>

<style define:vars={{background}}>
.thumbnail {
    background-color: var(--background);
}
</style>